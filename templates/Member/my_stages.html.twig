{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1>{{ memberTools.getMember.getMemberFirstname()|title }} {{ memberTools.getMember.getMemberName()|title }}</h1>
    <h2>Historique des stages ({{ memberTools.getStages.total }} h)</h2>
    {% for grade in memberTools.getStages().history %}
    <h3>{{ listData.grade(grade.Rank) }} ({{ grade.Total }} h)</h3>
    {% if grade.Stage is defined %}
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Date</th>
                <th scope="col">Dur√©e (h)</th>
            </tr>
        </thead>
        <tbody>
        {% for stage in grade.Stage %}
            <tr>
                <td>{{ stage.Name }}</td>
                <td>{{ stage.Date|date("d/m/Y") }}</td>
                <td>{{ stage.Duration }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
    {% endfor %}
{% endblock %}

