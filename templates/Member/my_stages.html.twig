{% block body %}
    <h1>{{ memberTools.getMember.getMemberFirstname()|title }} {{ memberTools.getMember.getMemberName()|title }}</h1>
    <h2>Historique des stages ({{ memberTools.getStages().total }} h)</h2>
    <table class="table table-sm table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Date</th>
                <th scope="col">Dur√©e (h)</th>
            </tr>
        </thead>
        <tbody>
        {% for stage in memberTools.getStages().history.Stage %}
        <tr>
            <td>{{ stage.Name }}</td>
            <td>{{ stage.Date|date("d/m/Y") }}</td>
            <td>{{ stage.Duration }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

