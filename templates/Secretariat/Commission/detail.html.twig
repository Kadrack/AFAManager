{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1>{{ commission.commissionName() }}</h1>
    <a class="btn btn-primary" href="{{ path('secretariat_commission_member_add', {'commission': commission.commissionId()}) }}">Ajouter</a>
    <table class="table table-sm table-hover table-striped">
        <thead>
            <tr>
                <th>N° de licence</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td class="align-middle">{{ member.Id }}</td>
                <td class="align-middle">{{ member.Firstname|title }}</td>
                <td class="align-middle">{{ member.Name|title }}</td>
                <td class="align-middle"><a class="btn btn-primary" href="{{ path('secretariat_commission_member_delete', {'commission': commission.commissionId(), 'member': member.Id}) }}">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
{% endblock %}
