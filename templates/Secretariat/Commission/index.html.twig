{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1>Liste des commissions</h1>
    <a class="btn btn-primary" href="{{ path('secretariat-commissionCreate') }}">Ajouter</a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        {% for commission in commissions %}
            <tr>
                <td class="align-middle">{{ commission.getCommissionName() }}</td>
                <td class="align-middle"><a class="btn btn-primary" href="{{ path('secretariat-commissionDetail', {'commission': commission.commissionId()}) }}">Liste des Membres</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
{% endblock %}
