<body>
    <div class="WordSection1">
    {% for member in members %}
        <div class="conteneurCarte" style="width:321px;">
            <div>&nbsp;</div>
            <img class="licence" src="{{ asset('images/licence.jpg') }}" />
            <img class="photo" src="{{ asset('uploads/photos/'~member.getMemberPhoto()) }}" />
            <img class="codebarre" src="https://barcode.aikido.be/html/image.php?code=code93&o=1&t=30&r=1&text={{ member.memberId }}&f=&a1=&a2=" />
            <div class="nomPrenom">{{ member.memberFirstname }} {{ member.memberName }}</div>
            <div class="club">{{ member.memberActualClub.clubName }} - {{ member.memberActualClub.clubId }}</div>
            <div class="licence"><b>Licence nÂ° {{ member.memberId }}</b></div>
        </div>
        {% if (loop.index == 4) or (loop.index == 8) or (loop.index == 12) or (loop.index == 16) or (loop.index == 20) %}<div class="pb"></div>{% endif %}
    {% endfor %}
    </div>
