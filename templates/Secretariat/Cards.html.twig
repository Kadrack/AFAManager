    <style type="text/css">
        h1 {font-size:2em;}
        p {}
        tr {font-size:0.6em;}
        html, body {width:8.5cm;
            height:5.5cm;
            margin:0;
            color:white;

        }
        @page WordSection1
        {size:595.3pt 841.9pt;
            margin:2cm 1.0cm 2cm 1.0cm;
            mso-header-margin:35.4pt;
            mso-footer-margin:35.4pt;
            mso-paper-source:0;}
        div.WordSection1
        {page:WordSection1;}

        .conteneurCarte{position:relative;
            width:8.5cm;
            height:5.5cm;
            color:white;
            marging:0;
            padding:0;
        }
        img.photo{position:absolute;
            width:1.87cm;
