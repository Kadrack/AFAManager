{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1>Liste des renouvellements payés à compléter</h1>
    {% for club in list %}
    <h2>{{ club.Id }} - {{ club.Name|title }} <a class="btn btn-primary" href="{{ path('secretariat-printStamp', {'club': club.Id}) }}" target="_blank">Imprimer timbres</a> <a class="btn btn-primary" href="{{ path('secretariat-stampForPrintingValidate', {'club': club.Id}) }}">Valider Impression</a></h2>
    <table class="table table-sm table-hover unselectable">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Licence n°</th>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Validé le</th>
            </tr>
        </thead>
        <tbody>
        {% for member in club.Members %}
            <tr>
                <td class="align-middle">{{ loop.index }}</td>
                <td class="align-middle">{{ member.Id }}</td>
                <td class="align-middle">{{ member.FirstName|title }}</td>
                <td class="align-middle">{{ member.Name|title }}</td>
                <td class="align-middle">{{ member.Date|date("d/m/Y") }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endfor %}

{% endblock %}

{% block javascripts %}
{% endblock %}
