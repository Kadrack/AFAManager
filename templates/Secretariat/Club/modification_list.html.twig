{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1>Liste des modifications à répercuter sur Wordpress</h1>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">N° Club</th>
                <th scope="col">Nom Club</th>
                <th scope="col">Action</th>
                <th scope="col">Date</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        {% for modification in modification_list %}
            <tr>
                <td class="align-middle">{{ modification.clubModificationLogClub.clubId }}</td>
                <td class="align-middle">{{ modification.clubModificationLogClub.clubName|title }}</td>
                <td class="align-middle">{{ modification.clubModificationLogAction }}</td>
                <td class="align-middle">{{ modification.clubModificationLogDate|date("d/m/Y") }}</td>
                <td class="align-middle"><a class="btn btn-primary" href="{{ path('secretariat_dojo_modification_list', {'modification': modification.clubModificationLogId}) }}">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
{% endblock %}
