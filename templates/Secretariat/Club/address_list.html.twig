{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1>Liste adresses des clubs</h1>
    {% for active in active_clubs %}
    <h2>{{ active.province }}</h2>
    <table class="table table-sm table-hover">
    {% for club in active.Clubs %}
        <tr>
            <th colspan="3" class="text-center"><h3>{{ club.Id }} {{ club.Name|title }}</h3></th>
        </tr>
        <tr>
            <th rowspan="2" class="text-center">Adresse Si√®ge</th>
        </tr>
        <tr>
            <td>{{ club.Zip }} {{ club.City|title }}</td>
            <td>{{ club.Address }}</td>
        </tr>
        <tr>
            <th rowspan="2" class="text-center">Adresse Dojo(s)</th>
        </tr>
        <tr>
            <td>{{ club.ZipDojo }} {{ club.CityDojo|title }}</td>
            <td>{{ club.AddressDojo }}</td>
        </tr>
    {% endfor %}
    </table>
    {% endfor %}
{% endblock %}

