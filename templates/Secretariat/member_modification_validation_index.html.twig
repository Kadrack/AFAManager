{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1>Liste des modifications en attente</h1>
    <table>
        <tr>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Code postal</th>
            <th>Localit√©</th>
            <th>Pays</th>
            <th>Email</th>
            <th>Commandes</th>
        </tr>
        {% for modification in modifications %}
            <tr>
                <td>{{ modification.FirstName }} {{ modification.Name }}</td>
                <td>{{ modification.Address }}</td>
                <td>{{ modification.Zip }}</td>
                <td>{{ modification.City }}</td>
                <td>{{ modification.Country }}</td>
                <td>{{ modification.Email }}</td>
                <td><a href="{{ path('secretariat_member_modification_validation_validate', {'member': modification.Member}) }}">Valider</a> - <a href="{{ path('secretariat_member_modification_validation_cancel', {'member': modification.Member}) }}">Refuser</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

