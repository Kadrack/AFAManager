{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1>Liste des modifications en attente</h1>
    <table>
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Date de naissance</th>
            <th>Adresse</th>
            <th>Code postal</th>
            <th>Localité</th>
            <th>Pays</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Commandes</th>
        </tr>
        {% for modification in modifications %}
            <tr>
                <td>{{ modification.FirstName|title }} ({{ modification.NewFirstName }})</td>
                <td>{{ modification.Name|title }} ({{ modification.NewName }})</td>
                <td>{% if modification.Birthday != null %}{{ modification.Birthday|date("d/m/Y") }}{% endif %}</td>
                <td>{{ modification.Address }}</td>
                <td>{{ modification.Zip }}</td>
                <td>{{ modification.City|title }}</td>
                <td>{{ modification.Country }}</td>
                <td>{{ modification.Email }}</td>
                <td>{{ modification.Phone }}</td>
                <td><a href="{{ path('secretariat_member_modification_validation_validate', {'member': modification.Member}) }}">Valider</a> - <a href="{{ path('secretariat_member_modification_validation_cancel', {'member': modification.Member}) }}">Refuser</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block javascripts %}
{% endblock %}
