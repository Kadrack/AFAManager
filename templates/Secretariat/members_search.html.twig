{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    {% if results != null %}
    <h2>Résultats de la recherche</h2>
    <table>
        <tr>
            <th>#</th>
            <th>Licence n°</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Club</th>
            <th>Echéance</th>
            <th>Commandes</th>
        </tr>
        {% for member in results %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ member.Id }}</td>
                <td>{{ member.FirstName|title }}</td>
                <td>{{ member.Name|title }}</td>
                <td>{{ member.ClubId }} - {{ member.Club|title }}</td>
                <td>{{ member.Deadline|date("d/m/Y") }}</td>
                <td><a href="{{ path('secretariat_member_personal_detail', {'club': member.ClubId, 'member': member.Id}) }}">Données personnelles</a> - <a href="{{ path('secretariat_member_form_renew', {'club': member.ClubId, 'member': member.Id}) }}">Formulaire renouvellement</a> - <a href="{{ path('secretariat_member_licence_detail', {'club': member.ClubId, 'member': member.Id}) }}">Licence</a></td>
            </tr>
        {% endfor %}
    </table>
    {% endif %}

{% endblock %}

{% block javascripts %}
{% endblock %}
